
/ left-side
.chat-side
  .chat-side__user
    .chat-side__user-content
      .chat-side__user-name
        = current_user.name

      = link_to "", class: "chat-side__user--new-group" do
        = fa_icon 'pencil-square-o', class: 'icon'

      = link_to edit_user_path(current_user), class: "chat-side__user--edit-user" do
        = fa_icon 'cog', class: 'icon'

  .chat-side__groups
    = render partial: "chat-side__group"

/ main
.chat-main
  .chat-main__header
    .chat-main__header--group
      .chat-main__header--group-name
        sample group
      %a.chat-main__header--group-edit-btn{href: ""}
        edit
    .chat-main__header-members
      MEMBER:
      %i jj

  .chat-main__body
    .chat-main__body--messages-list
      = render partial: "chat-main__body--messages-list"

  .chat-main__footer
    %form.chat-main__footer-form
      .chat-main__footer-body
        %input.message{placeholder: "type a message",type: "text",name: "message[body]"}
        %label.chat-file{for: "message_image"}
          %input.image{type: "file",accept:"image/*",id:"message_image"}
          %i.fa.fa-picture-o
        %input.submit{type: "submit", value: "Send"}
